<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/poptop_framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <FrameLayout
            android:id="@+id/framelayou_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

        <RelativeLayout
            android:id="@+id/flexible_framelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            >

            <ImageView
                android:id="@+id/popupwindow_img_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="150dp"
                android:src="@mipmap/welcome_android_slogan"
                />
        </RelativeLayout>
    </FrameLayout>
    <!-- 细线-->
    <include layout="@layout/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/linear_preferential"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <CheckBox
                android:id="@+id/checkbox_preferential"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/fragment_preferential_check"
                android:button="@null"
                android:checked="true"
                android:clickable="false"
                android:paddingBottom="20dp"
                android:focusable="false" />

            <TextView
                android:id="@+id/text_preferential"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:text="最优惠" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_luck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <CheckBox
                android:id="@+id/checkbox_luck"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/fragment_luck_check"
                android:button="@null"
                android:clickable="false"
                android:paddingBottom="20dp"
                android:focusable="false" />

            <TextView
                android:id="@+id/text_luck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:text="拼手气" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relative_discovery"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/img_bottom_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/tabbar_compose_background_icon_add" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linear_shake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <CheckBox
                android:id="@+id/checkbox_shake"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/fragment_shake_check"
                android:button="@null"
                android:paddingBottom="20dp"
                android:clickable="false"
                android:focusable="false"

                />

            <TextView
                android:id="@+id/text_shake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:text="摇一摇" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <CheckBox
                android:id="@+id/checkbox_user"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/fragment_usercoupons_check"
                android:button="@null"
                android:clickable="false"
                android:paddingBottom="20dp"
                android:focusable="false" />

            <TextView
                android:id="@+id/text_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:text="用　户" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
